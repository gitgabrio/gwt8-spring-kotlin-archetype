#set( $symbol_pound = '#' )
#set( $symbol_dollar = '$' )
#set( $symbol_escape = '\' )
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:b='urn:import:org.gwtbootstrap3.client.ui'>
    <g:HTMLPanel>
        <b:Container fluid="true">
            <b:Row>
                <b:Column size="MD_4">
                    <g:VerticalPanel>
                        <b:Label>First Name</b:Label>
                        <b:TextBox ui:field="firstName"/>
                    </g:VerticalPanel>
                </b:Column>
                <b:Column size="MD_4">
                    <g:VerticalPanel>
                        <b:Label>Last Name</b:Label>
                        <b:TextBox ui:field="lastName"/>
                    </g:VerticalPanel>
                </b:Column>
                <b:Column size="MD_2">
                    <b:Button ui:field="logout" b:id="logout">EXIT</b:Button>
                </b:Column>
            </b:Row>
        </b:Container>
    </g:HTMLPanel>
</ui:UiBinder>